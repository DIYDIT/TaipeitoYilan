  <script>
    // 顯示現在時間
    function updateNow() {
      const now = new Date();
      const fmt = now.toLocaleTimeString('zh-TW', { hour12: false });
      document.getElementById('now').textContent = fmt;
    }
    setInterval(updateNow, 1000);
    updateNow();
    
    // 靜態抓取下一班時間（範例：此範本為靜態模擬）
    document.getElementById('train-next').textContent = '請參考下方時刻表查詢最近班次';
    document.getElementById('bus-next').textContent   = '請參考下方時刻資訊查詢最近班次';
  </script>
